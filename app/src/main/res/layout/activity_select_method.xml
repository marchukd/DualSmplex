<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.dmytro.dualsmplex.SelectMethodActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btSimplex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-7dp"
            android:layout_weight="1"
            android:onClick="onSelectMethod"
            android:text="Прямий симплекс-метод" />

        <Button
            android:id="@+id/btDualSimplex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-7dp"
            android:layout_weight="1"
            android:onClick="onSelectMethod"
            android:text="Двоїстий симплекс-метод" />

        <Button
            android:id="@+id/btHomori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="-5dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"
            android:layout_marginTop="-7dp"
            android:layout_weight="1"
            android:onClick="onSelectMethod"
            android:text="Алгоритм гоморі" />
    </TableLayout>

</LinearLayout>
